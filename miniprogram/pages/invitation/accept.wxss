/* pages/invitation/accept.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.input-section {
  display: flex;
  margin-bottom: 40rpx;
}

.code-input {
  flex: 1;
  height: 88rpx;
  background-color: #fff;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.verify-btn {
  width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff6b81;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.inviter-info {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.info-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info-content {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.gender {
  font-size: 26rpx;
  color: #666;
}

.confirm-section {
  text-align: center;
}

.confirm-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff6b81;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.tips {
  margin-top: 60rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
} 