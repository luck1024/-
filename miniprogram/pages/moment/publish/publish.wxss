.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.form {
  flex: 1;
  padding: 30rpx;
  background-color: #fff;
}

.textarea-container {
  position: relative;
  margin-bottom: 30rpx;
}

.content {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.images-container {
  margin-bottom: 30rpx;
}

.images-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  margin: 0 20rpx 20rpx 0;
}

.image-item:nth-child(3n) {
  margin-right: 0;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
}

.add-image {
  width: 210rpx;
  height: 210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
}

.add-icon {
  font-size: 60rpx;
  color: #ccc;
}

.image-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.options {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.option-icon {
  margin-right: 20rpx;
  font-size: 36rpx;
}

.option-text {
  font-size: 28rpx;
  color: #666;
}

.footer {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.publish-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6b81;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
} 