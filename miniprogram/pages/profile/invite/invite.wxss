/* pages/profile/invite/invite.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

.invite-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.code-section {
  margin-bottom: 40rpx;
}

.code-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.code-display {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.code {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b81;
  letter-spacing: 4rpx;
  margin-right: 20rpx;
}

.copy-btn {
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.code-tip {
  font-size: 24rpx;
  color: #999;
}

.share-section {
  margin-bottom: 20rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background-color: #ff6b81;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin: 60rpx 0;
}

.line {
  flex: 1;
  height: 1rpx;
  background-color: #eee;
}

.divider text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #999;
}

.accept-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.accept-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.accept-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  border-radius: 44rpx;
  font-size: 30rpx;
  color: #666;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(-45deg);
}

.tips {
  padding: 20rpx 0;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
} 