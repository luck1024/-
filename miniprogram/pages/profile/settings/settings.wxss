/* pages/profile/settings/settings.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

.section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 0 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item text {
  font-size: 30rpx;
  color: #333;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
  padding-right: 30rpx;
  position: relative;
}

.picker-text::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(-45deg);
}

.theme-group {
  display: flex;
  padding: 30rpx 0;
}

.theme-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
}

.theme-preview {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
}

.theme-preview.light {
  background-color: #fff;
}

.theme-preview.dark {
  background-color: #333;
}

.theme-option.active .theme-preview {
  border-color: #ff6b81;
}

.theme-option text {
  font-size: 28rpx;
  color: #666;
}

.theme-option.active text {
  color: #ff6b81;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(-45deg);
}

.logout-btn {
  margin: 60rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #fff;
  color: #ff6b81;
  font-size: 30rpx;
  border-radius: 44rpx;
} 