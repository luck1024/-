/* pages/invite/accept/accept.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部图片 */
.top-image {
  width: 300rpx;
  height: 300rpx;
  margin: 50rpx 0;
}

/* 接受邀请说明 */
.invite-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.invite-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 50rpx;
  text-align: center;
}

/* 邀请码输入 */
.code-input-section {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 50rpx;
}

.code-input {
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  text-align: center;
  letter-spacing: 4rpx;
}

/* 接受邀请按钮 */
.accept-btn {
  width: 100%;
  background-color: #ff6b81;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin-bottom: 50rpx;
}

/* 返回按钮 */
.back-section {
  margin-top: 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #999;
  text-decoration: underline;
} 