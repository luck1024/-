.container {
  padding: 20rpx;
  background-color: #fff5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 40rpx;
  color: #ff4d94;
  font-weight: bold;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.love-card {
  background: linear-gradient(45deg, #ff9a9e, #fad0c4);
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin: 30rpx 0;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  color: #ff4d94;
  margin: 30rpx 0;
  display: block;
}

.wish-list {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
}

.wish-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ffd6e7;
}

.wish-item:last-child {
  border-bottom: none;
}

.wish-item text {
  margin-left: 20rpx;
  color: #666;
}