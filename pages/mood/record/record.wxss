/* pages/mood/record/record.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

/* 通用样式 */
.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 日期选择 */
.date-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}

/* 表情选择 */
.emoji-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.selected-emoji {
  font-size: 80rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.emoji-list {
  white-space: nowrap;
}

.emoji-item {
  display: inline-block;
  font-size: 50rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.emoji-item.active {
  background-color: #f0f0f0;
}

/* 心情内容 */
.content-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.content-input {
  width: 100%;
  height: 300rpx;
  font-size: 30rpx;
  line-height: 1.5;
}

.word-count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #999;
}

/* 保存按钮 */
.btn-section {
  margin-top: 50rpx;
}

.save-btn {
  background-color: #ff6b81;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
} 