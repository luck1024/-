.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 30rpx;
}

/* 个人资料卡片 */
.profile-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.edit-btn {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}

.stat-item {
  text-align: center;
}

.number {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

/* 伴侣信息 */
.partner-section {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 30rpx;
}

.partner-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.partner-name {
  font-size: 28rpx;
  color: #666;
}

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #666;
}

/* 退出登录按钮 */
.logout-btn {
  margin-top: 60rpx;
  text-align: center;
  padding: 24rpx;
  background: #fff;
  color: #ff4444;
  font-size: 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
} 